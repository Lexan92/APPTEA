<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apptea">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.personaTea.ActualizarPersonaTeaActivity"></activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.usuario.RegistroUsuarioActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".instalacion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.categoriahabilidadcotidiana.NuevaCategoriaDialog"
            android:theme="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth" />
        <activity
            android:name=".ui.categoriapictograma.CategoriaNueva"
            android:theme="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth" />
        <activity
            android:name=".ui.personaTea.NuevaPersonaTea"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.pictograma.NuevoPictogramaDialog"
            android:label="Nuevo Pictograma"
            android:theme="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth" />
        <activity
            android:name=".ui.categoriahabilidadcotidiana.EditCategoriaHab"
            android:theme="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth" />


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>
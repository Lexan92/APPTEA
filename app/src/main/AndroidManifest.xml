<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.apptea">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.juegoSeleccion.SeleccionaOpcion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.juego.EditarPregunta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.juego.BuscarPictograma"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchablepictograma" />
        </activity>
        <activity
            android:name=".ui.juego.VisorPregunta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.juego.DefinirPregunta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.juego.JuegoPrincipal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.juego.NuevoJuego"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.usuario.RegistroUsuarioActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".instalacion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.categoriahabilidadcotidiana.NuevaCategoriaDialog"
            android:theme="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth" />
        <activity
            android:name=".ui.categoriapictograma.CategoriaNueva"
            android:theme="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth" />
        <activity
            android:name=".ui.personaTea.NuevaPersonaTea"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.pictograma.NuevoPictogramaDialog"
            android:label="Nuevo Pictograma"
            android:theme="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth" />
        <activity
            android:name=".ui.categoriahabilidadcotidiana.EditCategoriaHab"
            android:theme="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth" />
        <activity
            android:name=".ui.usuario.EditUsuario"
            android:parentActivityName=".ui.usuario.RegistroUsuarioActivity"
            android:windowSoftInputMode="adjustPan|stateVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.usuario.EditContrasenia" />
        </activity>
        <activity
            android:name=".ui.usuario.EditContrasenia"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.Utilities.UtilCamara"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.usuario.ValidarCodigo"
            android:theme="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth" />
        <activity
            android:name=".ui.habilidadCotidiana.NuevaHabilidadCotidianaDialog"
            android:label=" "
            android:theme="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth" />
        <activity
            android:name=".ui.habilidadCotidiana.SecuenciaFragment"
            android:label=" "
            />
        <activity
            android:name=".ui.habilidadCotidiana.AgregarSecuenciaDialog"
            android:label=" "
            android:theme="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width= "match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardUsuarioMiperfil"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardElevation="12dp"
        app:strokeColor="@color/colorPrimaryDark"
        app:strokeWidth="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFondo"
            android:orientation="horizontal"
            android:layout_margin="25dp"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="115dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_user_mi_perfil" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:id="@+id/txt_nombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textColor="@color/mi_perfil_titulo"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                </LinearLayout>

            <ImageView
                android:layout_width="23dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_edit_mi_perfil"
                android:onClick="LLevara a editar infromacion"
                tools:ignore="OnClick" />
        </LinearLayout>
        <View android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/letra_mi_perfil_contenido"
            android:layout_marginTop="140dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_tituloEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="@color/mi_perfil_titulo"
                    android:text="E-mail: "
                    android:fontFamily="@font/capriola"/>
                <TextView
                    android:id="@+id/txt_correoUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textSize="19sp"
                    android:textStyle="normal"
                    android:textColor="@color/letra_mi_perfil_contenido"
                    android:fontFamily="@font/capriola"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_tituloTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="@color/mi_perfil_titulo"
                    android:text="Telefono: "
                    android:fontFamily="@font/capriola"/>
                <TextView
                    android:id="@+id/txt_telefonoUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textSize="19sp"
                    android:textStyle="normal"
                    android:textColor="@color/letra_mi_perfil_contenido"
                    android:fontFamily="@font/capriola"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_tituloPais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="@color/mi_perfil_titulo"
                    android:text="País: "
                    android:fontFamily="@font/capriola"/>
                <TextView
                    android:id="@+id/txt_pais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textSize="19sp"
                    android:textStyle="normal"
                    android:textColor="@color/letra_mi_perfil_contenido"
                    android:fontFamily="@font/capriola"/>
            </LinearLayout>

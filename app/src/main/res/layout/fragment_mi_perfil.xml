<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.usuario.UsuarioFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_mi_perfil"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/recyclerview_item_mi_perfil" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/editar_perfil"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="0dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_mi_perfil"
        app:layout_constraintVertical_bias="0.094"
        app:strokeColor="@color/colorPrimaryDark"
        app:strokeWidth="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/ic_edit_mi_perfil" />

            <TextView
                android:id="@+id/text_editar_perfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Editar InformaciÃ³n"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textSize="25sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tus_perfiles"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardElevation="1dp"
        app:layout_constraintTop_toBottomOf="@+id/editar_perfil"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="@color/colorPrimaryDark"
        app:strokeWidth="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_tus_perfiles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Tus Perfiles"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textSize="25sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/acerca_de"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tus_perfiles"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="@color/colorPrimaryDark"
        app:strokeWidth="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_acerca_de"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="Acerca de TEAyudo Jugando"
                android:layout_marginTop="30dp"/>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<GridLayout tools:context=".ui.home.HomeFragment"
    android:layout_width="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    android:layout_height="match_parent">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_frases"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >



                <!-- Media -->
            <ImageView

                android:layout_width="121dp"
                android:layout_height="match_parent"

                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_frases"

                />



                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frases"
                        android:textAlignment="center"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        />







        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_vocabulario"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

           >

                <!-- Media -->
                <ImageView

                    android:layout_width="121dp"
                    android:layout_height="150dp"

                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_vocabulario"

                    />



                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:id="@+id/vocabulario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Vocabulario"
                        android:textAlignment="center"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?attr/textAppearanceHeadline6" />








        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_habilidades"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">



                <!-- Media -->
                <ImageView
                    android:layout_width="121dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginLeft="20dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_habilidad"

                    />



                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:layout_width="199dp"
                        android:layout_height="wrap_content"
                        android:text="Habilidades
                        Cotidianas"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        />








        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_juegos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">



                <!-- Media -->
                <ImageView

                    android:layout_width="121dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/ic_juegos"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"

                    />



                    <!-- Title, secondary and supporting text -->
            <TextView
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Juegos
                        Interactivos"
                android:textAppearance="?attr/textAppearanceHeadline6" />


        </com.google.android.material.card.MaterialCardView>
    </GridLayout>

</ScrollView>





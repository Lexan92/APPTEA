<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editar_pregunta_view"
    android:background="@drawable/background_juego"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.juego.EditarPregunta">

    <TextView
        android:id="@+id/editNombreJuego1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/nombreJuego"
        android:textColor="@color/colorSplash"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />


    <EditText
        android:id="@+id/nombre_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorSplash"
        android:hint="@string/tituloPregunta"
        android:inputType="textCapWords"
        android:maxLength="30"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline11"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guardar_pregunta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_pregunta">

        <ImageButton
            android:id="@+id/opcion_uno"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_agregar"
            app:layout_constraintEnd_toStartOf="@+id/opcion_dos"
            app:layout_constraintHeight_percent=".30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".35" />


        <TextView
            android:id="@+id/nombre_opcion_uno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/nombre_opcion_dos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/opcion_uno"
            app:layout_constraintWidth_percent=".40">

        </TextView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/check_opcion_uno"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintEnd_toEndOf="@+id/nombre_opcion_uno"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/nombre_opcion_uno"
            app:layout_constraintTop_toBottomOf="@+id/nombre_opcion_uno"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent=".40"
            app:lottie_rawRes="@raw/checked_done">

        </com.airbnb.lottie.LottieAnimationView>

        <ImageButton
            android:id="@+id/opcion_dos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_agregar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".30"
            app:layout_constraintStart_toEndOf="@+id/opcion_uno"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".35" />

        <TextView
            android:id="@+id/nombre_opcion_dos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.58"
            app:layout_constraintStart_toEndOf="@+id/nombre_opcion_uno"
            app:layout_constraintTop_toBottomOf="@+id/opcion_dos"
            app:layout_constraintWidth_percent=".40" >

        </TextView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/check_opcion_dos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintEnd_toEndOf="@+id/nombre_opcion_dos"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/nombre_opcion_dos"
            app:layout_constraintTop_toBottomOf="@+id/nombre_opcion_dos"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent=".40"
            app:lottie_rawRes="@raw/checked_done" />

        <ImageButton
            android:id="@+id/opcion_tres"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_agregar"
            app:layout_constraintEnd_toStartOf="@+id/opcion_cuatro"
            app:layout_constraintHeight_percent=".30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            app:layout_constraintWidth_percent=".35" />

        <TextView
            android:id="@+id/nombre_opcion_tres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/nombre_opcion_cuatro"
            app:layout_constraintHorizontal_bias="0.735"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/opcion_tres"
            app:layout_constraintWidth_percent=".40">

        </TextView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/check_opcion_tres"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/nombre_opcion_tres"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="@+id/nombre_opcion_tres"
            app:layout_constraintTop_toBottomOf="@+id/nombre_opcion_tres"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent=".40"
            app:lottie_rawRes="@raw/checked_done"/>

        <ImageButton
            android:id="@+id/opcion_cuatro"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_agregar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".30"
            app:layout_constraintStart_toEndOf="@+id/opcion_tres"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            app:layout_constraintWidth_percent=".35" />

        <TextView
            android:id="@+id/nombre_opcion_cuatro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toEndOf="@+id/nombre_opcion_tres"
            app:layout_constraintTop_toBottomOf="@+id/opcion_cuatro"
            app:layout_constraintWidth_percent=".40">

        </TextView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/check_opcion_cuatro"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/nombre_opcion_cuatro"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="@+id/nombre_opcion_cuatro"
            app:layout_constraintTop_toBottomOf="@+id/nombre_opcion_cuatro"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent=".40"
            app:lottie_rawRes="@raw/checked_done" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".50" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/guardar_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/guardarPregunta"
        android:textColor="@color/colorSplash"
        app:icon="@drawable/ic_guardar_alterna"
        app:iconTint="@color/colorSplash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".10"/>

</androidx.constraintlayout.widget.ConstraintLayout>